[core]
  compression = 9
  preloadindex = true
[status]
  branch = true
  showStatus = true
  # showUntrackedFiles = true
[diff]
  rename = copies
  context = 3
  interHunkContext = 10

[color "diff"]
  meta = black bold
  frag = magenta
  context = white
  whitespace = yellow reverse
  old = red

[url "git@github.com:"]
    insteadOf = https://github.com/
[url "git@gist.github.com:"]
    insteadOf = https://gist.github.com/

[push]
  default = current
  followTags = true

[pull]
  default = current
  rebase = true

[rebase]
  autoStash = true
  missingCommitsCheck = warn

[commit]
	gpgsign = true
[init]
	defaultBranch = main
[fetch]
	prune = true
